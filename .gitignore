# ==========================================================
# 1. IGNORAR NÚCLEO DE WORDPRESS (WordPress Core)
# ==========================================================

# Ignorar las carpetas principales del núcleo
/wp-admin/
/wp-includes/

# Ignorar archivos en el directorio raíz
/index.php
/license.txt
/readme.html
/wp-*.php
/xmlrpc.php

# Ignorar archivos de configuración y logs
wp-config.php
*.log

# Ignorar archivos del sistema
.htaccess
ehthumbs.db
Thumbs.db

# ==========================================================
# 2. IGNORAR ARCHIVOS Y CARPETAS DENTRO DE WP-CONTENT
# ==========================================================

# Archivos específicos y carpetas generadas
/wp-content/index.php
/wp-content/languages/
/wp-content/upgrade/
/wp-content/uploads/
/wp-content/ai1wm-backups/

# ----------------------------------------------------------
# 3. GESTIÓN DE PLUGINS (SOLO NAME_PLUGIN)
# ----------------------------------------------------------

# Ignora todos los plugins
/wp-content/plugins/*
# Excepción: Incluye el plugin específico
# !/wp-content/plugins/name_plugin/
# Excepción: Incluye todos los contenidos dentro de name_plugin
# !/wp-content/plugins/name_plugin/**

# ----------------------------------------------------------
# 4. GESTIÓN DE TEMAS (SOLO PORTFOLIO-RAMCON) -> EL CAMBIO CLAVE
# ----------------------------------------------------------

# 1. Ignora todos los temas (archivos y carpetas) DENTRO de wp-content/themes
/wp-content/themes/*

# 2. Excepción: Asegura que la carpeta del tema específico NO se ignore.
!/wp-content/themes/portfolio-ramcon/

# 3. Excepción: Asegura que todo el CONTENIDO de esa carpeta NO se ignore.
!/wp-content/themes/portfolio-ramcon/**